% School name and location
\university{The University of Melbourne}
\universitycity{Melbourne}
\universitystate{Victoria}

\definecolor{SchoolColor}{rgb}{.035, 0.254, 0.514}
\definecolor{chaptergrey}{rgb}{0.2600, 0.0200, 0.4600} % dialed back a little
\definecolor{midgrey}{rgb}{0.4, 0.4, 0.4}

\hypersetup{
    colorlinks,
    citecolor=SchoolColor,
    filecolor=black,
    linkcolor=black,
    urlcolor=SchoolColor,
}

% This is where you change the ordering of the frontmatter
\renewcommand{\frontmatter}{
	\pagenumbering{roman}
	\input{frontmatter/personalize}
	\maketitle
	\dedicationpage
	% \copyrightpage
	%\frontispiece
	\abstractpage
    \declaration
    \preface
	% \contrib
	\acknowledgments
	\tableofcontents
	
	
	%\dedicationpage



	% figure listing - required if you have any figures
	\listoffigures
	\phantomsection
	\addcontentsline{toc}{chapter}{List of figures}

	% table listing - required if you have any tables
	\listoftables
	\phantomsection
	\addcontentsline{toc}{chapter}{List of tables}

	% appendix listing - required only if you have two or more appendices
	% \newpage
	% \thispagestyle{empty}
	% \phantomsection
	% \addcontentsline{toc}{chapter}{List of appendices}
	% \chapter*{List of appendices}
	% \contentsline {chapter}{Appendix A}{\pageref{AppendixA}}{}

	\newpage
	\setcounter{page}{1}
	\pagenumbering{arabic}
}

% -- Sets up title page

\renewcommand{\maketitle}{
	\thispagestyle{empty}
	\vspace*{\fill}
	\vspace{100pt}
	\begin{center}
	\Huge {\thetitle} \normalsize \\
	\vspace{25pt}
	\theauthor\\
    \textsc{ \href{https://google.com}{ORCID} \\}
	\vspace{135pt}
	\textsc{\@degreemonth, \@degreeyear \\
	  \vspace{10pt}
      A thesis submitted in complete fulfillment\\
	of the requirements for the degree of \\
	\vspace{8pt}
	\@degree \\
	\@department \\
	\@university }
	\end{center}
	\vspace*{\fill}
}

\newcommand{\copyrightpage}{
	\newpage
	\thispagestyle{empty}
	\vspace*{25pt}
	\begin{center}
	\scshape \noindent \small \copyright \  \small  \theauthor \\
	all rights reserved, \@degreeyear
	\end{center}
	\newpage
	\rm
}
\newlength\longest
\newcommand{\frontispiece}{
	\newpage
    \input{frontmatter/frontispiece.tex}
}

\newcommand{\dedicationpage}{
	\phantomsection
	\newpage
	\addcontentsline{toc}{chapter}{Dedication}
	%\setcounter{page}{6}
	\vspace*{\fill}
	\scshape \noindent \input{frontmatter/dedication}
	\vspace*{\fill}
	\newpage
	\rm
}

\newcommand{\acknowledgments}{
	\phantomsection
	\newpage
	\addcontentsline{toc}{chapter}{Acknowledgments}
	\chapter*{Acknowledgments}
	\noindent
	\input{frontmatter/thanks}
	\vspace*{\fill} \newpage
}

\newcommand{\preface}{
	\phantomsection
	\addcontentsline{toc}{chapter}{Preface}
	\chapter*{Preface}
	\input{frontmatter/preface}
}

\newcommand{\abstractpage}{
	\phantomsection
	\newpage
	\addcontentsline{toc}{chapter}{Abstract}
	\chapter*{Abstract}
	\input{frontmatter/abstract}
}

\newcommand{\declaration}{
	\phantomsection
	\newpage
	\addcontentsline{toc}{chapter}{Declaration}
	\chapter*{Declaration}
	\input{frontmatter/declaration}
}